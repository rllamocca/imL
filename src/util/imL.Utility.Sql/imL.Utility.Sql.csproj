	</PropertyGroup>
	<PropertyGroup>
		<TargetFrameworks>
			net35
			;net40
			;net45
			;net451
			;net452
			;netstandard1.3
			;netstandard1.4
			;netstandard1.5
			;netstandard1.6
			;netstandard2.0
			;netstandard2.1
			;net5.0
			;net6.0
			;net7.0
		</TargetFrameworks>

		<Authors>Ricardo Llamocca ♪♫</Authors>
		<Company>imL</Company>
